<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="plone.app.drafts">

    <include package="plone.behavior" file="meta.zcml" />

    <plone:behavior
        name="plone.draftable"
        title="Drafting support"
        description="Enables autosaved drafting on add and edit forms"
        provides="plone.app.drafts.interfaces.IDraftable"
        marker="plone.app.drafts.interfaces.IDraftable"
    />

</configure>
